<h2 class="mt-3">Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group col-md-6">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-2" %>
  </div>

  <div class="field form-group col-md-6">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(Не менее <%= @minimum_password_length %> символов)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-2" %>
  </div>

  <div class="field form-group col-md-6">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-2" %>
  </div>

  <div class="actions">
    <%= f.submit "Зарегистрироваться", class: "btn btn-primary my-2" %>
  </div>
<% end %>

<%= render "devise/shared/links"%>
