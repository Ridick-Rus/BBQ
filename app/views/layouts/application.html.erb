<!DOCTYPE html>
<html>
<head>
  <title>Bbq</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
</head>

<body>
<div class="card bg-light navbar navbar-default navbar-static-top">
  <div class="container">
    <%= link_to t('app.name'), root_path, class: 'navbar-brand' %>

    <div class="header-nav">
      <ul class="mg-bt">
        <% if user_signed_in? %>
          <li class="header-nav-item"><%= link_to 'Профиль', current_user, class: "nav-link button" %></li>
          <li class="header-nav-item"><%= link_to 'Выйти', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link button" %></li>
        <% else %>
          <li class="header-nav-item"><%= link_to 'Войти', new_user_session_path, class: "nav-link button" %></li>
          <li class="header-nav-item"><%= link_to 'Зарегистрироваться', new_user_registration_path, class: "nav-link button" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-9 ">
      <%= render partial: "partials/flash" %>
      <%= yield %>
    </div>
    <div class="col-lg-3">
    </div><!--/span-->
  </div>

  <footer class="text-center text-lg-start">
    <div class="text-center p-1">
      <p class="m-0">&copy; <%= t('app.company') %> 2023</p>
    </div>
  </footer>
</div>
</body>

</html>
