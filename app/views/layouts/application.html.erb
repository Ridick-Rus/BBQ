<!DOCTYPE html>
<html>
  <head>
    <title>Bbq</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
  <div class="navbar navbar-default navbar-static-top">
    <div class="container">
      <%# Для вывода названия приложения используем хелпер I18n.t %>
      <%= link_to t('app.name'), root_path, class: 'navbar-brand' %>

      <div>
        <ul>
          <% if user_signed_in? %>
            <li><%= link_to 'Профиль', current_user %></li>
            <li><%= link_to 'Выйти', destroy_user_session_path, data: { turbo_method: :delete } %></li>
          <% else %>
            <li><%= link_to 'Войти', new_user_session_path %></li>
            <li><%= link_to 'Зарегистрироваться', new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="container">
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>

    <div class="row">
      <div class="col-lg-9">
        <%= yield %>
      </div>
      <div class="col-lg-3">
      </div><!--/span-->
    </div><!--/row-->

    <footer>
      <p>&copy; <%= t('app.company') %> 2023</p>
    </footer>
  </div>
  </body>

</html>
